<prism:PrismApplication
    x:Class="MusicerBeat.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/"
    xmlns:system="clr-namespace:System;assembly=System.Runtime">
    <Application.Resources>
        <SolidColorBrush x:Key="DarkBgBrush" Color="#333340" />
        <SolidColorBrush x:Key="MediumBgBrush" Color="#444460" />
        <SolidColorBrush x:Key="ForegroundBrush" Color="LightGray" />
        <system:Double x:Key="BasicFontSize">14.0</system:Double>
    </Application.Resources>
</prism:PrismApplication>